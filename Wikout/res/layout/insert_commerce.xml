<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

<LinearLayout 
    android:id="@+id/container1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivInsertCommercePhoto"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:onClick="imageClicked"
        android:scaleType="centerCrop"
        android:src="@drawable/nophoto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView 
            android:id="@+id/tvInsertCommercePlacename"
            style="@style/grayText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Inserte nombre del comercio:" />

        <EditText 
            android:id="@+id/etInsertCommercePlacename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Nombre" >

            <requestFocus />
        </EditText>

        <TextView 
            android:id="@+id/tvInsertCommerceAddresslabel"
            style="@style/grayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Direccion:" />

        <TextView
            android:id="@+id/tvInsertCommerceAddress"
            style="@style/boldText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Calle el Coso, 56, 50001 Zaragoza, España" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tvInsertCommerceCategory"
                style="@style/grayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elija categoría:" />

            <Spinner
                android:id="@+id/spnInsertCommerceCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:entries="@array/categorias"
                android:prompt="@string/categorias_prompt" />
        </LinearLayout>

        <Button android:focusable="true" android:focusableInTouchMode="true"
            android:id="@+id/btnInsertCommerceOk"
            style="@style/ButtonColor"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Insertar" />

    </LinearLayout>

</LinearLayout>
</ScrollView>