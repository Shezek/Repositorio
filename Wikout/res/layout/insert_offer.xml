<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivInsertPhoto"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:cropToPadding="true"
        android:onClick="imageClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/nophoto" />

    <TextView style="@style/grayText"
        android:id="@+id/tvOfferDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Inserte Oferta:" />

    <EditText
        android:id="@+id/etInsertDescription"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:ems="10"
        android:hint="Oferta" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <TextView style="@style/grayText"
            android:id="@+id/tvInsertText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
            android:text="VÃ¡lido hasta:" />

        <Button
            android:id="@+id/btnInsertDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha" />

    </LinearLayout>

    <TextView style="@style/grayText"
        android:id="@+id/tvPlaceNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"
        android:text="Comercio:" />

    <EditText
        android:id="@+id/etInsertPlacename"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:ems="10"
        android:enabled="false"
        android:hint="Nombre"
        android:visibility="invisible" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnCommerce"
        style="@style/ButtonColor"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnInsertOffer"
        android:layout_alignLeft="@+id/etInsertPlacename"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:text="Comercio" />

    <Button
        android:id="@+id/btnInsertOffer"
        style="@style/ButtonColor"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="#7e7b7b"
        android:text="Insertar" />

</LinearLayout>